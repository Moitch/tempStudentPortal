@model Announcement

<div class="page-title-with-back-menu">
	<a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" class="">
		<i class="bi bi-chevron-left"></i>
		Cancel
	</a>
	<h1 class="">New Announcement</h1>
</div>

<form asp-controller="Announcements" asp-action="Create" asp-route-id="@Model.CourseId" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title">Title</label>
		<input type="text" class="form-control" id="title" name="Title" value="@Model.Title">
	</div>
	<div class="form-group">
		<label for="message">Message</label>
		<textarea class="form-control" id="message" name="Message">@Model.Message</textarea>
	</div>
	<div class="text-center m-5">
		<button type="submit" class="">Create</button>
	</div>
</form>