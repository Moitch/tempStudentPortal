@model StudentPortalProject.Models.AssignmentSubmission

@{
    ViewData["Title"] = "Submit Assignment";
}

<h1>Submit Assignment</h1>

<p>@Model.Assignment.Title</p>

<form asp-controller="Assignments" asp-action="SubmitAssignment" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="submissionFiles">Submission Files</label>
        <input type="file" class="form-control-file" id="submissionFiles" name="submissionFiles" multiple>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input type="hidden" name="assignmentId" value="@Model.AssignmentId" />
</form>